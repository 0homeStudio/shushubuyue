
@{
    ViewBag.Title = "Start";
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, maximum-scale=3, minimum-scale=1, user-scalable=no">
    <title>陌生人你好</title>
    @Styles.Render("~/layui/css/layui.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/layui/layui.js")
</head>
<body>
<div style="background-color:crimson;height:50px;text-align:center;line-height:50px;font-size:18px;">叔叔不约</div>
<div style="text-align:center;margin-top:10%">
<button class="layui-btn" id="btn_match">开始匹配</button>
</div>
</body>
</html>
<script type="text/javascript">
    var layer;
    layui.use('layer', function () {
       layer = layui.layer;
    });
    $("#btn_match").click(function () {
        var msg=layer.msg('匹配中', {
            icon: 16
            , shade: 0.01
            , time: false
        });
        $.post("/Home/OnlineAndMatch", {}, function (data) {
            var json = JSON.parse(data);
            layer.alert("你来自"+json.content.address_detail.city, {title:'爸爸告诉你',icon:1});
          
        });
    });
</script>

